<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_credits"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/contoh_gambar"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/BubbleChat" />

    <TextView
        android:id="@+id/tv_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_credits"
        app:layout_constraintStart_toStartOf="@id/iv_credits"
        app:layout_constraintTop_toBottomOf="@id/iv_credits" />

    <TextView
        android:id="@+id/tv_character"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/tv_actor_name"
        app:layout_constraintStart_toStartOf="@id/tv_actor_name"
        app:layout_constraintTop_toBottomOf="@id/tv_actor_name" />

</androidx.constraintlayout.widget.ConstraintLayout>